<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/ds12">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_pack_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds56"
        android:background="@drawable/sub_selector_bg_color"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_pack_4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Yearly"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pack_4_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds4"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="then 199$/week" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/layout_pack_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds12"
        android:layout_weight="1"
        android:background="@drawable/sub_selector_bg_color"
        android:orientation="vertical"
        android:paddingVertical="@dimen/ds10"
        android:paddingLeft="@dimen/ds6"
        android:paddingRight="@dimen/ds6"
        app:layout_constraintEnd_toStartOf="@+id/layout_pack_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_pack_4">

        <TextView
            android:id="@+id/tv_pack_1_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds40"
            android:layout_marginTop="@dimen/ds10"
            android:gravity="center"
            android:lines="2"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp14"
            android:textStyle="bold"
            tools:text="MONTHLY" />

        <TextView
            android:id="@+id/tv_pack_1_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="then 199$/week" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pack_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/ds10"
        android:layout_marginEnd="@dimen/ds10"
        android:background="@drawable/sub_selector_bg_color"

        android:orientation="vertical"
        android:paddingVertical="@dimen/ds10"
        android:paddingLeft="@dimen/ds6"
        android:paddingRight="@dimen/ds6"
        app:layout_constraintBottom_toBottomOf="@+id/layout_pack_1"
        app:layout_constraintEnd_toStartOf="@+id/layout_pack_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_pack_1"
        app:layout_constraintTop_toTopOf="@+id/layout_pack_1">

        <TextView
            android:id="@+id/tv_pack_2_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds40"
            android:layout_marginTop="@dimen/ds10"
            android:gravity="center"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp14"
            android:textStyle="bold"
            tools:text="MONTHLY" />

        <TextView
            android:id="@+id/tv_pack_2_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="then 199$/week" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pack_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sub_selector_bg_color"
        android:orientation="vertical"
        android:paddingVertical="@dimen/ds10"
        android:paddingLeft="@dimen/ds6"
        android:paddingRight="@dimen/ds6"
        app:layout_constraintBottom_toBottomOf="@+id/layout_pack_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layout_pack_2"
        app:layout_constraintTop_toTopOf="@+id/layout_pack_2">

        <TextView
            android:id="@+id/tv_pack_3_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds40"
            android:layout_marginTop="@dimen/ds10"
            android:gravity="center"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp14"
            android:textStyle="bold"
            tools:text="MONTHLY" />

        <TextView
            android:id="@+id/tv_pack_3_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textColor="@drawable/sub_selector_text_color_1"
            android:textSize="@dimen/ds_sp9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="then 199$/week" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>